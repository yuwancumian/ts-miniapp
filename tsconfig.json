{
  "compilerOptions": {
    "baseUrl": "./",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": true,
    "pretty": true,
    "noEmitOnError": true,
    "noEmit": false,
    "strictPropertyInitialization": true,
    "lib": ["es5", "ES2015", "DOM"],
    "typeRoots": ["./typings"],
    "types": ["miniprogram-api-typings"],
    "skipLibCheck": true,
    "paths": {
      "@vant/weapp/*": ["src/node_modules/@vant/weapp/dist/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "**/*.d.ts"]
}
